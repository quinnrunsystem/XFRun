<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XFRun.UI.Sample"
    xmlns:ui="clr-namespace:XFRun.UI.Forms;assembly=XFRun.UI.Forms"
    x:Class="XFRun.UI.Sample.MainPage">
    <Grid>
        <StackLayout VerticalOptions="CenterAndExpand"
            Margin="20">
            <!-- Place new controls here -->
            <Label Text="TextBox"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />
            <ui:TextBox FillColor="Gray"
                Placeholder="Text placeholder "
                LeftIcon="baseline_account_circle_black_18dp"
                MakeCircle="false"
                RoundedCornerRadius="15"
                TextColor="Aqua"
                PlaceholderColor="Silver"
                BorderWidth="1"
                BorderColor="Lime" />
            <Label Text="PinView"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />
            <ui:PinView FillColor="White"
                MakeCircle="false"
                RoundedCornerRadius="15"
                BackgroundColor="Teal"
                Count="4" />
        </StackLayout>
    </Grid>
</ContentPage>